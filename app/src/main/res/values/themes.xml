<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodOrderApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FoodOrderApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FoodOrderApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FoodOrderApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/duskYellow</item>
    </style>
    <style name="custom_tab_layout_text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/tab_food_category_tv_size</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="title" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_see_all" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title_see_all</item>
        <item name="android:textColor">@color/color_app_default</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_sub" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_sub</item>
        <item name="android:textColor">@color/title_sub</item>
    </style>

    <style name="title_item" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title_item</item>
        <item name="android:textColor">@color/title_item</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="title_item_sub" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title_item_sub</item>
        <item name="android:textColor">@color/title_item_sub</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="title_item_detail" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title_item_detail</item>
        <item name="android:textColor">@color/title_item_detail</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="title_item_detail_sub" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title_item_detail_sub</item>
        <item name="android:textColor">@color/title_item_detail_sub</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="title_item_cart" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title_item_cart</item>
        <item name="android:textColor">@color/title_item_cart</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="title_item_food" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title_item_food</item>
        <item name="android:textColor">@color/title_item_food</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="title_item_food_sub" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title_item_food_sub</item>
        <item name="android:textColor">@color/title_item_food_sub</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_view_cart" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/title_item_cart</item>
        <item name="android:textColor">@color/title_item_cart_bgr</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/action_bar_title</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_bgr_action_bar</item>
    </style>

</resources>